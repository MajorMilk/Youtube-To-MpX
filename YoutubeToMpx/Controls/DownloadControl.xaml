<UserControl x:Class="YoutubeDownloader.Controls.DownloadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeDownloader.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1180">
    <Grid Background="#333333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <TextBlock FontFamily="Dosis" Grid.Row="1" Grid.Column="1" Text="Downloading..." Foreground="White" FontSize="38" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock FontFamily="Dosis" Grid.Row="2" Grid.Column="1" Text="This could take a moment..." Foreground="White" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Center"/>

    </Grid>
</UserControl>
